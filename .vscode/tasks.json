{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "wks build",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build (all)",
      "type": "shell",
      "command": "./workspace build",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "Build (behavior)",
      "type": "shell",
      "command": "./workspace build behavior_viewer",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "Build (debug)",
      "type": "shell",
      "command": "./workspace build:debug kid_size",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      },
    },
    {
      "label": "Build (monitoring)",
      "type": "shell",
      "command": "./workspace build qt_monitoring",
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": "absolute"
      }
    },
    {
      "label": "Status",
      "type": "shell",
      "command": "./workspace status",
      "problemMatcher": []
    },
    {
      "label": "Workspace pull",
      "type": "shell",
      "command": "./workspace pull",
      "problemMatcher": []
    }
  ]
}